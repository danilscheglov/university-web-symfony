{% extends 'base.html.twig' %}

{% block title %}Список автомобилей{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-12 col-xl-10">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center pt-4">
                <h3 class="card-title text-center mb-0">
                    {% if is_granted('ROLE_ADMIN') %}
                        Все автомобили
                    {% else %}
                        Мои автомобили
                    {% endif %}
                </h3>
                <div class="d-flex">
                    <div class="dropdown me-2">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="reportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-download"></i> Скачать отчет
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="reportDropdown">
                            <li><a class="dropdown-item" href="#" target="_blank"><i class="bi bi-file-earmark-pdf"></i> PDF</a></li>
                            <li><a class="dropdown-item" href="#" target="_blank"><i class="bi bi-file-earmark-excel"></i> Excel</a></li>
                            <li><a class="dropdown-item" href="#" target="_blank"><i class="bi bi-file-earmark-text"></i> CSV</a></li>
                        </ul>
                    </div>
                    
                    <a href="{{ path('car.create') }}" class="btn btn-primary">
                        <i class="bi bi-plus-lg"></i> Добавить новый автомобиль
                    </a>
                </div>
            </div>
            
            <div class="card-body">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Марка</th>
                                <th>Модель</th>
                                <th>Год</th>
                                <th>Цвет</th>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <th>Владелец</th>
                                {% endif %}
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for car in cars %}
                                <tr class="position-relative">
                                    <td>{{ car.brand }}</td>
                                    <td>{{ car.model }}</td>
                                    <td>
                                        <span class="badge bg-primary rounded-pill">
                                            {{ car.year }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="color-preview rounded-circle me-2"
                                                style="background-color: {{ getColorHex(car.color) }}; width: 20px; height: 20px;">
                                            </div>
                                            {{ car.color }}
                                        </div>
                                    </td>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <td>
                                            {% if car.owner.username is defined %}
                                                {{ car.owner.username }}
                                            {% else %}
                                                <em class="text-muted">Не указан</em>
                                            {% endif %}
                                        </td>
                                    {% endif %}
                                    <td>
                                        <form action="{{ path('car.destroy', {'id': car.id}) }}" method="post">
                                            <input type="hidden" name="_method" value="DELETE" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Вы уверены, что хотите удалить этот автомобиль?')">
                                                <i class="bi bi-trash"></i> Удалить
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="{{ is_granted('ROLE_ADMIN') ? 6 : 5 }}" class="text-center">
                                        Нет автомобилей для отображения
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}