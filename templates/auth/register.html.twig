{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="form-container">
            <div class="form-header">
                <h3 class="text-center mb-0">Регистрация</h3>
            </div>

            <form action="{{ path('app_register') }}" method="POST" class="p-4 compact-form" id="registerForm" novalidate>
                {% if success %}
                    <div class="alert alert-success">
                        Регистрация успешно завершена! Теперь вы можете <a href="{{ path('app_login') }}">войти в систему</a>.
                    </div>
                {% endif %}

               <div class="mb-3">
                    <label for="username" class="form-label">Имя</label>
                    <input type="text"
                        class="form-control shadow-sm {% if errors.username is defined %}is-invalid{% endif %}"
                        id="username"
                        name="username"
                        required
                        placeholder="Введите ваше имя"
                        maxlength="50"
                        pattern="[\p{L}\s\-]+"
                        title="Только буквы, пробелы и дефисы (макс. 50 символов)"
                        value="{{ formData.username|default('')|e }}">
                        {% if errors.username is defined %}
                            <div class="invalid-feedback">{{ errors.username }}</div>
                        {% endif %}
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email"
                        class="form-control shadow-sm {% if errors.email is defined %}is-invalid{% endif %}"
                        id="email"
                        name="email"
                        required
                        placeholder="example@mail.com"
                        value="{{ formData.email|default('')|e }}">
                    {% if errors.email is defined %}
                        <div class="invalid-feedback">{{ errors.email }}</div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Пароль</label>
                    <div class="input-group">
                        <input type="password"
                            class="form-control shadow-sm {% if errors.password is defined %}is-invalid{% endif %}"
                            id="password"
                            name="password"
                            required
                            placeholder="Введите пароль (мин. 8 символов)"
                            minlength="8">
                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                            <i class="bi bi-eye"></i>
                        </button>
                        {% if errors.password is defined %}
                            <div class="invalid-feedback">{{ errors.password }}</div>
                        {% endif %}
                    </div>
                </div>

                <div class="mb-3">
                    <label for="password_confirm" class="form-label">Подтверждение пароля</label>
                    <div class="input-group">
                        <input type="password"
                            class="form-control shadow-sm {% if errors.password_confirm is defined %}is-invalid{% endif %}"
                            id="password_confirm"
                            name="password_confirm"
                            required
                            placeholder="Повторите пароль"
                            minlength="8">
                        <button class="btn btn-outline-secondary" type="button" id="togglePasswordConfirm">
                            <i class="bi bi-eye"></i>
                        </button>
                        {% if errors.password_confirm is defined %}
                            <div class="invalid-feedback">{{ errors.password_confirm }}</div>
                        {% endif %}
                    </div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg shadow-lg py-2">
                        Зарегистрироваться
                    </button>
                </div>
                
                <div class="text-center mt-3">
                    <p>Уже есть аккаунт? <a href="{{ path('app_login') }}">Войти</a></p>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const togglePassword = document.getElementById('togglePassword');
        const togglePasswordConfirm = document.getElementById('togglePasswordConfirm');
        const password = document.getElementById('password');
        const passwordConfirm = document.getElementById('password_confirm');

        togglePassword.addEventListener('click', function() {
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            this.querySelector('i').classList.toggle('bi-eye');
            this.querySelector('i').classList.toggle('bi-eye-slash');
        });

        togglePasswordConfirm.addEventListener('click', function() {
            const type = passwordConfirm.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordConfirm.setAttribute('type', type);
            this.querySelector('i').classList.toggle('bi-eye');
            this.querySelector('i').classList.toggle('bi-eye-slash');
        });
    });
</script>
{% endblock %}