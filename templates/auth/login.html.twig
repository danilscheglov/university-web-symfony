{% extends 'base.html.twig' %}

{% block title %}Вход в систему{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="form-container">
            <div class="form-header">
                <h3 class="text-center mb-0">Вход в систему</h3>
            </div>

            <form action="{{ path('app_login') }}" method="POST" class="p-4 compact-form" id="loginForm" novalidate>
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error|trans({}, 'security') }}
                    </div>
                {% endif %}

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email"
                        class="form-control shadow-sm"
                        id="email"
                        name="_username"
                        required
                        placeholder="Введите ваш email"
                        value="{{ formData.email|default('')|e }}">
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Пароль</label>
                    <div class="input-group">
                        <input type="password"
                            class="form-control shadow-sm"
                            id="password"
                            name="_password"
                            required
                            placeholder="Введите пароль">
                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg shadow-lg py-2">
                        Войти
                    </button>
                </div>
                
                <div class="text-center mt-3">
                    <p>Ещё нет аккаунта? <a href="{{ path('app_register') }}">Зарегистрироваться</a></p>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const togglePassword = document.getElementById('togglePassword');
        const password = document.getElementById('password');

        togglePassword.addEventListener('click', function() {
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            this.querySelector('i').classList.toggle('bi-eye');
            this.querySelector('i').classList.toggle('bi-eye-slash');
        });
    });
</script>
{% endblock %}